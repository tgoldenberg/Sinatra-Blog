<div class="container">
  <h1>Sign Up</h1>
  <form action="/signup" method="post" class="form-horizontal">
  <div class="form-group">
    <input type="text" name="user[username]" placeholder="username" class="form-control" value="<%= params[:name]%>">
  </div>
  <div class="form-group">
    <input type="password" name="user[password]" placeholder="password" class="form-control">
  </div>
  <div class="form-group">
    <input type="password" name="user[password_confirmation]" placeholder="password" class="form-control">
  </div>
  <input type="submit" value="signup" class="btn btn-success btn-lg">
</form>
</div>
